<%-include( "partials/header" )%>

    <main class="main compose">

        <section class="py-4 text-center container">
            <div class="row justify-content-center py-lg-5">
                <div class="col-lg-6 col-md-8 text-center">
                    <h1 class="fw-light">Welcome To <span class="journee">Journee</span></h1>
                    <p class="lead text-body-secondary">

                        Unleash your inner author! Ink your adventures, secrets, and dreams on Journee.
                        Spark your muse with playful prompts, and witness your epic growth. Join the journaling
                        revolution – reclaim your narrative, one vibrant entry at a time! ✨
                    </p>
                    <p>
                        <a href="/journal/compose" class="btn btn-secondary outline-dark my-2">Start Writing✒️</a>
                    </p>
                </div>
            </div>
        </section>

        <article>
            <div class="container mb-5">
                <div class="row g-1 d-flex justify-content-center flex-wrap">
                    <% allPost.forEach((elem)=> { %>
                        <div class=" col-sm-6  col-md-6 col-lg-4 col-xl-4 py-3">
                            <div class="card shadow-sm d-flex justify-content-center align-items-center ">
                                <div class="card-body d-flex flex-column p-3 pb-3 pt-3 " style="height: 250px">
                                    <h1 class="card-title border rounded pb-2 text-center   ">
                                        <%= elem.title %>
                                    </h1>


                                    <p class="card-text mt-3 content">
                                        <%= elem.post %>
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center mt-3 ">
                                        <div class="">
                                            <a href="/journal/<%= elem.title%>"
                                                class="btn btn-sm btn-outline-secondary ">Read More</a>
                                            <a href="/journal/<%= elem.title %>/edit"
                                                class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <a href="/journal/<%= elem.title %>/delete"
                                                class="btn btn-sm btn-outline-danger ">Delete</a>
                                        </div>
                                        <small
                                            class="text-body-secondary "><%=elem.updatedAt.toLocaleDateString("en-IN",
                                                {weekday: "long" ,year: "numeric" ,month: "long" ,day: "numeric"
                                                ,})%></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>

                </div>
            </div>
        </article>

    </main>

    <%-include( "partials/footer" )%>